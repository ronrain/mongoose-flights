<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section>
    <div>Airline </div>
    <div>
      <%= flight.airline %>
    </div>
    <div>Airport: </div>
    <div><%= flight.airport %></div>
    <div>Flight Number: </div>
    <div><%= flight.flightNo %></div>
    <div>Departs: </div>
    <div><%= flight.departs %></div>
    <a href="/flights/<%= flight._id %>/edit">
      <button>Edit Flight</button>
      </a>
    </section>
    <div>Food:</div>
    <ul>
      <% flight.food.forEach(ingredient => { %>
        <li><%= ingredient.name %></li>
      <% }) %>
    </ul>
    <%# end cast list %>
  </section>
	<%# add to cast form below this comment %>
  <form id="add-meal-to-food" method="POST" action="/flights/<%= flight._id %>/meals">
    <select name="mealId">
      <% meals.forEach(meal => { %>
        <option value="<%= meal._id %>"><%= meal.name %></option>
      <% }) %>
    </select>
    <button type="submit">Add to Food</button>
  </form>
    <h2>Tickets</h2>
  <form 
    id="ticket-form"
    action="/flights/<%= flight._id %>/tickets"
    method="POST"
  >
    <label for="seat-pattern">Seat:</label>
    <input name="seat" required pattern="[A-F][1-9]\d?" id="seat-pattern">
    <label for="rating-select">Price:</label>
    <input name="price" type="number">
    <button type="submit" >Add Tickets</button>
  </form>
  <% if (flight.tickets) { %>
    <table>
      <thead>
        <tr>
          <th>Seat</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% let total = 0 %>
        <% flight.tickets.forEach(function(ticket) { %>
          <% total += ticket.price %>
          <tr>
            <td><%= ticket.seat %></td>
            <td><%= ticket.price %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <h3>No Tickets Yet</h3>
  <% } %>
</main>
  
<%- include('../partials/footer') %>